<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sds.mdg.bubbletrouble"
    android:versionCode="7"
    android:versionName="1.6" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.sds.mdg.bubbletrouble.MainActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
           >
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        

        <activity
            android:name="com.sds.mdg.bubbletrouble.GameActivity">
        </activity>
        
        <activity
            android:name="com.sds.mdg.bubbletrouble.FinishGameBoard"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        
         <activity
            android:name="com.sds.mdg.bubbletrouble.Instructions"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
       >
        </activity>
        <activity
            android:name="com.sds.mdg.bubbletrouble.InstructionsDetailed"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
       >
       </activity>
       
      <activity
            android:name="com.sds.mdg.bubbletrouble.AboutUs"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
       >
      </activity>
        
    </application>

</manifest>
